<%- include('../layouts/header', { user: user }) %>

<div class="container">
  <h2><%= job.title %></h2>

  <div class="job-details-card">
    <p><strong>Location:</strong> <%= job.location %></p>
    <p><strong>Description:</strong></p>
    <p><%= job.description %></p>

    <p><strong>Requirements:</strong></p>
    <p><%= job.requirements %></p>

    <p><strong>Posted By:</strong> <%= recruiter.name %></p>

    <a href="/jobs/list" class="btn">Back to Job List</a>
  </div>
</div>

<style>
  .container {
    max-width: 800px;
    margin: 40px auto;
  }

  .job-details-card {
    padding: 25px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background: #fafafa;
    margin-top: 20px;
  }

  .btn {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 18px;
    background: #4caf50;
    color: white;
    text-decoration: none;
    border-radius: 5px;
  }

  .btn:hover {
    background: #388e3c;
  }
</style>
