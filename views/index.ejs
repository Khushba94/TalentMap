<%- include('layouts/header', { user: user }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="/css/style.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<main class="container-fluid hero-section">
  <div class="row w-100">

    <!-- Left Image -->
    <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center">
      <img src="/images/login_img.jpg"
           class="img-fluid float"
           style="max-width: 620px; max-height: 500px; border-radius: 20px;"
           alt="TalentMap Illustration">
    </div>

    <!-- Right Content -->
    <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center text-center px-4">
      <h1 class="mb-3">Welcome to <strong>TalentMap</strong></h1>
      <p class="mb-4">Your resume-to-job matching platform.</p>

      <div class="action-buttons">
        <% if (user) { %>
          <% if (user.role === 'student') { %>
              <a class="btn btn-primary" href="/resume/upload">
                <i class="fas fa-file-upload me-2"></i> Upload Resume
              </a>

              <a class="btn btn-secondary" href="/offer/upload">
                <i class="fas fa-file-signature me-2"></i> Upload Offer Letter
              </a>

              <a class="btn btn-success" href="/agreement/generate">
                <i class="fas fa-file-contract me-2"></i> Generate Agreement
              </a>

              <a class="btn btn-outline-dark" href="/jobs/list">
                <i class="fas fa-briefcase me-2"></i> View Jobs
              </a>
            <div class="action-buttons">
          <% } %>
          <% if (user.role === 'recruiter') { %>
            <a class="btn btn-primary" href="/jobs/create">Create Job</a>
            <a class="btn btn-outline-dark" href="/match/history">View Matched Candidates</a>
          <% } %>
        <% } else { %>
          <a class="btn btn-primary" href="/auth/login">Login</a>
          <a class="btn btn-outline-secondary" href="/auth/register">Register</a>
        <% } %>
      </div>
    </div>

  </div>
</main>

<%- include('layouts/footer') %>

<script>
  gsap.to("h1", { opacity: 1, y: 0, duration: 1, ease: "power3.out" });
  gsap.to("p", { opacity: 1, y: 0, duration: 1, delay: 0.2, ease: "power3.out" });
  gsap.to(".action-buttons", { opacity: 1, y: 0, duration: 1, delay: 0.4, ease: "power3.out" });
</script>
