<%- include('../layouts/header', { user: user }) %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<main class="container py-5">
  <h2 class="mb-4">
    <i class="fas fa-chart-line me-2"></i>
    Match Results for <%= resume.candidate_name || ('Resume #' + resume.id) %>
  </h2>

  <% if (!results.length) { %>
    <div class="alert alert-info text-center">
      <i class="fas fa-info-circle me-2"></i>No matches found.
    </div>
  <% } else { %>

    <div class="row g-4">
      <% results.forEach(r => { %>
        <div class="col-12 col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h4 class="card-title">
                <a href="/jobs/details/<%= r.job.id %>" class="text-decoration-none">
                  <i class="fas fa-briefcase me-2"></i><%= r.job.title %>
                </a>
              </h4>

              <p><i class="fas fa-location-dot me-2"></i><strong>Location:</strong> <%= r.job.location %></p>
              <p><i class="fas fa-file-alt me-2"></i><strong>Description:</strong> <%= r.job.description %></p>

              <p class="mt-3"><strong>Match Score:</strong> <%= r.score %>%</p>

              <div class="progress" style="height: 10px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: <%= r.score %>%"></div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

  <% } %>
</main>

<%- include('../layouts/footer') %>
