<%- include('../layouts/header', { user: user }) %>
<link rel="stylesheet" href="/css/style.css">

<div class="container">
  <h2>Matched Candidates</h2>

  <% if (!matches.length) { %>
    <p>No matches yet.</p>
  <% } else { %>
    <table border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>Job Title</th>
          <th>Candidate</th>
          <th>Location</th>
          <th>Score</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% matches.forEach(m => { %>
          <tr>
            <td><%= m.title %></td>
            <td><%= m.candidate_name || ('Resume #' + m.resume_id) %></td>
            <td><%= m.location %></td>
            <td><%= m.score %>%</td>
            <td><%= m.created_at %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

</main>
</body>
</html>

<%- include('../layouts/footer') %>
